<Window x:Class="prac13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prac13"
        mc:Ignorable="d"
        Title="Практическая №13" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ToolBar VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,17">
            <Button Click="btnExit_Click" ToolTip="Выход">
                <Image Source="/Shutdown.ico" Width="16" Height="16" />
            </Button>
        </ToolBar>
        <Label Content="Исходные данные" HorizontalAlignment="Center" VerticalAlignment="Top" Width="180" FontSize="20" Margin="20" Height="37"/>
        <Label Content="Результат" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Grid.Column="1" Margin="20" />
        <TextBlock x:Name="tblStatus" TextWrapping="Wrap" VerticalAlignment="Bottom" Height="23" Grid.ColumnSpan="2" />
        <Menu Grid.ColumnSpan="2" VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Click="btnExit_Click"/>
                <MenuItem Header="Сохранить" Click="btnSaveMatrix_Click"/>
                <MenuItem Header="Открыть" Click="btnOpenMatrix_CLick"/>
            </MenuItem>
            <MenuItem Header="Изменить">
                <MenuItem Header="Очистить исходные данные" Click="ClearInputs_Click"/>
                <MenuItem Header="Очистить результат" Click="ClearRezult_Click" />
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе" Click="btnInfo_Click" />
            </MenuItem>
        </Menu>

        <Grid x:Name="GIntial" Margin="0,87,5,22">
            <Grid.RowDefinitions>
                <RowDefinition Height="113*"/>
                <RowDefinition Height="77*"/>
                <RowDefinition Height="190*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="107*"/>
                <ColumnDefinition Width="91*"/>
                <ColumnDefinition Width="93*"/>
                <ColumnDefinition Width="109*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="tbRows" HorizontalAlignment="Center"  TextWrapping="Wrap" VerticalAlignment="Center" Width="73" Grid.Column="1" Grid.Row="1" Height="17" />
            <TextBox x:Name="tbColumn" Grid.Column="2" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="73" Grid.Row="1" Height="17"/>
            <Label Grid.Column="1" Content="Строки" HorizontalAlignment="Center" Width="49" Height="26" VerticalAlignment="Top" Grid.Row="1"/>
            <Label Grid.Column="2" Content="Столбцы" HorizontalAlignment="Center" VerticalAlignment="Top" Width="59" Height="23"  Grid.Row="1"/>
        </Grid>
        <Grid x:Name="GRezult" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="300">
            
            <Button x:Name="btnInfo" Click="btnInfo_Click" Content="О программе" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,40"/>
            <Button x:Name="btnExit" Click="btnExit_Click" Content="Выход" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="78"/>
            <Button x:Name="btnCalculate" Content="Рассчитать" Click="btnCalculate_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="78" Height="42" Margin="10" />
            <TextBox x:Name="tbResult" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="120" IsReadOnly="True" Margin="90"/>
            <DataGrid x:Name="DGarray" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="360" Height="142"/>


        </Grid>
    </Grid>
</Window>
